<div class="top-bar">
  <button id="menuBtn" class="menu-btn">&#9776;</button>
  <div class="brand">
    <img class="logo" src="<%= backend %>/ajustes/logo" onerror="this.src='/logo-placeholder.svg'" alt="Logo" />
    <span class="brand-title">Consejo de Estudiantes</span>
  </div>
  <div id="userArea" class="user-area">
    <img class="avatar" src="/user-placeholder.svg" alt="Usuario" />
    <div class="user-text">
      <span id="userName"></span>
      <span id="userNIU" class="niu"></span>
    </div>
  </div>
</div>

 <div id="sideMenu" class="side-menu">
   <a href="/dashboard"><i class="fa-solid fa-house"></i> Home</a>
   <a href="/asistencias"><i class="fa-regular fa-calendar-check"></i> Asistencias</a>
 </div>

<div id="userPopup" class="user-popup hidden">
  <div class="popup-content">
    <span id="popupClose" class="close">&times;</span>
    <h2 class="popup-title">Perfil</h2>
    <label>Nombre
      <input id="nombreInput" type="text" disabled />
    </label>
    <label>Grupo
      <input id="grupoInput" type="text" disabled />
    </label>
    <label>Curso
      <input id="cursoInput" type="text" disabled />
    </label>
    <label>NIU
      <input id="niuInput" type="text" disabled />
    </label>
    <div class="actions">
      <button id="editBtn" class="profile-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/></svg>
        Editar
      </button>
      <button id="saveBtn" class="profile-btn hidden">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16"><path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1z"/></svg>
        Guardar
      </button>
    </div>
  </div>
</div>
<div id="toastContainer" class="toast-container"></div>
